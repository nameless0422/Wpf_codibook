<UserControl x:Class="codibook.MVVM.View.ItemViewPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:codibook.MVVM.View"
             mc:Ignorable="d" 
             Background="Transparent"
             d:DesignHeight="720" d:DesignWidth="1280"
             >
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="0.5*"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
    <Grid Grid.Row="1">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.125*"/>
            <ColumnDefinition/>
            <ColumnDefinition Width="0.125*"/>
        </Grid.ColumnDefinitions>
                    <!-- 화살표 버튼 -->
        <Grid Grid.Column="0" VerticalAlignment="Center">
            <Button x:Name="LeftArrowButton" 
                    Click="LeftArrowButton_Click"
                    Width="100"
                    Height="100"
                    Margin="0, 40, 20, 40"
                    RenderTransformOrigin="0.5,0.5"
                    Style="{StaticResource ArrowButton}" HorizontalAlignment="Center">
                <Button.RenderTransform>
                    <ScaleTransform ScaleX="-1" />
                </Button.RenderTransform>
            </Button>
        </Grid>

        <Grid Grid.Column="2" VerticalAlignment="Center">
                <Button x:Name="RightArrowButton" 
                        Click="RightArrowButton_Click"
                        Width="100"
                        Height="100"
                        Margin="20, 40, 0, 40"
                        RenderTransformOrigin="0.5,0.5"
                        Style="{StaticResource ArrowButton}" HorizontalAlignment="Center">
                </Button>
            </Grid>
    </Grid>
    </Grid>
</UserControl>